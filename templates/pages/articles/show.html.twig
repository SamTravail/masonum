{% extends 'base.html.twig' %}

{% block title %}
	Maso-Numérique  -
	{{ article.title}}
{% endblock %}

{% block body %}
	<div class="container">
		{% for message in app.flashes('success') %}
				<div class='alert alert-danger mt-4'>
					{{message}}
				</div>
			{% endfor %}
			
		<h1 class="mt-4 text-center">{{ article.title}}</h1>
		<div class="articles__image text-center mt-4">
			<img style="max-width: 500px; " src="{{ vich_uploader_asset(article, 'imageFile') }}">
		</div>

		<p class="mt-4">
			Cet article à une note de
			{{article.moyenne |round(1, 'floor')}}
			/5</p>
		<p class="mt-4">
			{{article.content}}</p>
		<p class="mt-4">
			Auteur :
			{{ article.auteur}}</p>
		<p class="mt-4">Edité le :
			{{article.createdAt|date('d/m/Y')}}</p>
		{% if article.modifiedAt %}
			<p class="mt-4">Modifié le :
				{{article.modifiedAt|date('d/m/Y')}}</p>

		{% else %}
			<p></p>
		{% endif %}
		<div class='moyenne'>
		{{form(form)}}
		</div>
	</div>
	
	{% endblock %}
