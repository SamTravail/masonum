{% extends 'base.html.twig' %}

{% block title %}Maso-Numérique  -Articles publics
{% endblock %}

{% block body %}
	<div
		class="container mt-4">
		
	
			<h1>
				Articles publics</h1>

			{# vatiable pour indiquer le nombre d'article #}
			<div class="count mt-4">
				Il y a
				{{ articles.getTotalItemCount }}
				articles.
			</div>
			<div class="d-flex justify-content-around mt-5 flex-wrap">
				{% for article in articles %}
					<div class="card border-info mb-3 mr-3" style="max-width: 20rem;">
						<div class="card-header">auteur
							{{article.auteur}}</div>
						<div class="card-body">
							<h4 class="card-title">{{article.title}}</h4>
                            {# limité le nb de caractères et mettre ... grace au filte slice #}
							<p class="card-text">{{article.content | slice (0, 100) ~ '...' }}</p>
							<h6 class="card-title">
								Edité le :
								{{article.createdAt|date('d/m/Y')}}</h6>
						</div>
					</div>
				{% endfor %}
			</div>
            <div class="navigation"></div>
            {# pagination #}
			<div class="navigation-info mt-4">
				{{ knp_pagination_render(articles) }}
			</div>
		</div>
	{% endblock %}
